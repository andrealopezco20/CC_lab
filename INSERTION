#include<iostream>
#include<vector>
using namespace std;
template <class T>
void InsertionSort(T arr[], int n, bool (*p)(int , int))
{
	int i, j;
	T temp;

	for (int i = 1; i < n; ++i)
	{

		temp = arr[i];
		j = i - 1;

		while (j >= 0 && p(temp,arr[j]))
		{
			arr[j + 1] = arr[j];
			j = j - 1;
		}

		arr[j + 1] = temp;

	}
}
template <class T>
void PrintArray(T arr[], int n)
{
	for (int i = 0; i < n; ++i)
	{
		cout << arr[i] << ' ';
	}
	cout << endl;
}
bool compare1(int x, int y) {
    return x <= y;
}

bool compare2(int x, int y) {
    return x > y;
}

int main()
{
	int intArray[] = { 5,8,4,2,8,9,10,34,0,32,2,1 };
	int n = sizeof(intArray) / sizeof(int);

	cout << "Inicial: ";
	PrintArray(intArray, n);
	cout << "Ordenado ascendente: ";
	InsertionSort(intArray, n,compare1);
	PrintArray(intArray, n);
	cout << "Ordenado descendente: ";
	InsertionSort(intArray, n,compare2);
	PrintArray(intArray, n);
	cout << "\n";
	cout<< "********************************************************"<<endl;
	char charArray[] = { 'A','Z','F','S','B','C','Q','O' };
	n = sizeof(charArray) / sizeof(char);
	cout << "Inicial: ";
	PrintArray(charArray, n);
	cout << "Ordenado ascendente: ";
	InsertionSort(charArray, n,compare1);
	PrintArray(charArray, n);
	cout << "Ordenado descendente: ";
	InsertionSort(charArray, n,compare2);
	PrintArray(charArray, n);

}
